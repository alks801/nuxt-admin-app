  "version": "0.2.0",
  "configurations": [{
      "type": "node",
      "request": "launch",
      "name": "Run NUXT",
      "protocol": "inspector",
      "program": "${workspaceRoot}/node_modules/nuxt/bin/nuxt",
      "stopOnEntry": false,
      "args": ["dev"],
      "cwd": "${workspaceRoot}",
      "sourceMaps": true,
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "nuxt:*,app"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}\\server\\index.js"
    }
  ]
}
